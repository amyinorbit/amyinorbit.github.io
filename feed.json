---
---
{
    "version": "https://jsonfeed.org/version/1",
    "title": {{ site.name | jsonify }},
    "description": {{ site.description | smartify | jsonify }},
    "home_page_url": "{{ site.baseurl | prepend: site.url }}",
    "feed_url": "{{ "/feed.json" | prepend: site.baseurl | prepend: site.url }}",
    "author": {
        "name": {{ site.author | jsonify }}
    },
    "items": [
        {% for post in site.posts %}{
            "id": {{ post.id | jsonify }},
            "url": "{{ post.url | prepend: site.baseurl | prepend: site.url }}",
            "title": {{ post.title | smartify | jsonify }},
            {% if post.image %}"image": "{{ post.image | prepend: site.baseurl | prepend: site.url }}",{% endif %}
            "date_published": "{{ post. date | date: "%a, %d %b %Y %H:%M:%S %z" }}",
            "content_html": {{ post.content | jsonify }}
        }{% if forloop.last == false %},{% endif %}
        {% endfor %}
    ]
}